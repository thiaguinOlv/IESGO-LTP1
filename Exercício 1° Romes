## 9: 

def remove_vogais():
    
    frase = input('digite uma frase: ')
    return frase.replace("a","").replace("e","").replace("i","").replace("o","").replace("u","")

print(remove_vogais())
##---------------------------------------------------------------------------------------------------------------------------------------------------------------------
## 10:

def Contador_de_caracteres():
    texto = input("Digite o texto no contador de caracteres: ")
    return len(texto)
print(Contador_de_caracteres())
